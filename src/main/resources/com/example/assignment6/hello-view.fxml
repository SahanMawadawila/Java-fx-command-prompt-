<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="backgroundBox" alignment="TOP_CENTER" maxHeight="1000.0" maxWidth="1000.0" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment6.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="474.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="-">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="Max">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeBtnFn" prefHeight="30.0" prefWidth="30.0" text="X">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="label1" prefHeight="40.0" prefWidth="452.0" textFill="#1742dd">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets bottom="-20.0" />
         </VBox.margin>
      </Label>
      <TextArea fx:id="txtOutput" editable="false" prefHeight="253.0" prefWidth="460.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></TextArea>
      <HBox prefHeight="34.0" prefWidth="460.0">
         <children>
            <Label prefHeight="53.0" prefWidth="99.0" text="Command" textFill="#270fdd">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <TextField fx:id="txtCommand" prefHeight="48.0" prefWidth="465.0" promptText="Enter Command Here" />
      <Button fx:id="runButton" mnemonicParsing="false" onAction="#runNetwork" prefHeight="55.0" prefWidth="105.0" text="RUN/STOP">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
   </children>
</VBox>
